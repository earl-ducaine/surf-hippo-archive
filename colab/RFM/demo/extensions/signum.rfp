
signum(X) :- <(X, 0) & -1.
signum(0) :-& 0.
signum(X) :- >(X, 0) & 1.
sigint(X) :- less(X, 0) & -1.
sigint(0) :-& 0.
sigint(X) :- greater(X, 0) & 1.
less(X, Y) :- negless(X, Y).
less(X, Y) :- posless(X, Y).
less(X, Y) :- neg(X), pos(Y).
negless(X, 0) :- neg(X).
negless(p[X], p[Y]) :- negless(X, Y).
posless(0, Y) :- pos(Y).
posless(s[X], s[Y]) :- posless(X, Y).
neg(p[0]).
neg(p[X]) :- neg(X).
pos(s[0]).
pos(s[X]) :- pos(X).